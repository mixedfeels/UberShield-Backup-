<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/uberLogoLoginPG"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@null"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@drawable/uber" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittex_background"
            android:drawableStart="@drawable/account_icon"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Usuário"
            android:textColor="#B8000000"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="#ffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittex_background"
            android:drawableStart="@drawable/password_icon"
            android:ems="0"
            android:gravity="center"
            android:inputType="text"
            android:text="Senha"
            android:textAlignment="center"
            android:textColor="#B8000000"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="#ffff"
            android:textSize="16sp"
            tools:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn_background"
            android:text="@string/login"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:iconTint="@null" />

        <Button
            android:id="@+id/registrar_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="Não tem uma conta? Registre-se"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Powered by Grupo 18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>