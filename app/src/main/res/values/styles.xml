<resources>
    <!-- Botão principal estilo Uber -->
    <style name="UberShieldButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo do Nome do Usuário -->
    <style name="UserNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo Alternativo do Nome do Usuário -->
    <style name="UserNameStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo do Botão Primário -->
    <style name="ButtonPrimary">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo do Texto de Status -->
    <style name="StatusText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
