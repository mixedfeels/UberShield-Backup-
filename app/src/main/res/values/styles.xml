<resources>
    <!-- Botão principal estilo Uber -->
    <style name="UberShieldButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo do Nome do Usuário -->
    <style name="UserNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo Alternativo do Nome do Usuário -->
    <style name="UserNameStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo do Botão Primário -->
    <style name="ButtonPrimary">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo do Texto de Status -->
    <style name="StatusText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo do Texto Pequeno -->
    <style name="minimumText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/uber_move_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilo do Texto Padrão -->
    <style name="defaultText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/uber_move_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo do Texto para Título -->
    <style name="titleText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/uber_move_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Tema Overlay da Biometria -->
    <style name="OverlayTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
