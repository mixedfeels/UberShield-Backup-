<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal do aplicativo (Modo Claro) -->
    <style name="Theme.UberShield" parent="Theme.MaterialComponents.DayNight.NoActionBar">
                <item name="colorPrimary">#FFFFFF</item>
                <item name="colorPrimaryVariant">#F1F1F1</item>
                <item name="colorOnPrimary">#000000</item>
                <item name="colorSecondary">#1DB954</item>
                <item name="colorOnSecondary">#FFFFFF</item>
                <item name="android:statusBarColor">#FFFFFF</item>
                <item name="android:windowBackground">#F5F5F5</item>
    </style>

    <!-- Botão principal estilo Uber -->
    <style name="UberShieldButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo do Nome do Usuário -->
    <style name="UserNameText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

        <style name="UserNameStyle">
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textSize">18sp</item>
            <item name="android:fontFamily">sans-serif-medium</item>
        </style>

        <style name="ButtonPrimary">
            <item name="android:backgroundTint">@color/black</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textSize">16sp</item>
            <item name="android:padding">12dp</item>
        </style>

        <style name="StatusText">
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textSize">14sp</item>
            <item name="android:gravity">center</item>
        </style>


</resources>
